<div class="customer-card">
  <div>
    <%= image_tag customer.image, class: "customer-image" if customer.image.attached? %>
  </div>
  <div class="customer-details">
    <strong><%= customer.full_name %></strong>
    <p>Phone: <%= customer.phone_number %></p>
    <p>Email: <%= customer.email_address.presence || "Not provided" %></p>
    <p><%= customer.notes %></p>
  </div>
</div>
